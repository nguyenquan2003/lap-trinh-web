@model IEnumerable<_2001210779_NguyenNgocQuan_PC05.Models.SanPham>

@{
    ViewBag.Title = "SearchSP";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>SearchSP</h2>
<div class="row">
    @{
        foreach (var item in Model)
        {
            if (ViewBag.TB == null)
            {
                <div class="col-4 border" style="margin-top:20px">
                    <img style="" src="/Images_KTL2/@item.Anh" width="70%" height="70%" />
                    @if (item.TenSP.Length > 30)
                    {
                        <p>
                            <b>Tiêu đề: @item.TenSP.Substring(0, 30)...</b>
                            <a href="~/Sach/XemChiTietSach?ms=@item.MaSP">Xem Chi Tiết</a>
                        </p>
                    }
                    else
                    {
                        <p>
                            <b>Tên SP: @item.TenSP</b> <br />
                            <a href="@Url.Action("XemChiTietSach",new { ms = item.MaSP})">Xem chi tiết</a>
                        </p>
                    }
                </div>

            }
            else
            {
                <p>@ViewBag.TB</p>
            }

        }
    }
</div>
