@model IEnumerable<_2001210779_NguyenNgocQuan_PC05.Models.Banner>
<div class="row">
    <div class="col">

        <div id="carouselExampleControls" class="carousel w-100 mx-auto mt-3" data-ride="carousel">
            <div class="carousel-inner">
                @{var stt = 1;}
                @foreach (var item in Model)
                {
                    if (@stt == 1)
                    {
                        stt = 0;
                        <div class="carousel-item active">
                            <img src="~/Images_KTL2/Banner/@item.FileName" class="d-block w-100 " alt="Ảnh 1" />
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item ">
                            <img src="~/Images_KTL2/Banner/@item.FileName" class="d-block w-100 " alt="Ảnh 1" />
                        </div>
                    }

                }

            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>