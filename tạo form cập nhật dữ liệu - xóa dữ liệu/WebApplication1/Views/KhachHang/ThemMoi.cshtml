@model WebApplication1.Models.KhachHang

@{
    ViewBag.Title = "Thêm Mới Khách Hàng";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}


<div class="container" style="margin-top:120px; min-height:80vh">
    <div class="col-md-12">
        <h5>Thêm khách hàng mới</h5>
        <a class="btn btn-sm btn-success" style="float: right; margin-top: -50px; font-size: 15px;" href="~/KhachHang/ThemMoi">
            Thêm mới khách hàng
        </a>
    </div>

    <div class="col-md-12">
        @using (Html.BeginForm("ThemMoi","KhachHang",FormMethod.Post,new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2">ID</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <label class="control-label col-md-2" style="white-space: nowrap;">Tên khách hàng</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenKhachHang, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenKhachHang, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Số điện thoại</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2" style="white-space: nowrap;">Địa chỉ nhận hàng</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DiaChiNhanHang, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DiaChiNhanHang, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Email</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Giới tính</label>
                    <div class="col-md-10">

                        <select name="GioiTinh" class="form-control">
                            <option value="Nam">Giới tính Nam</option>
                            <option value="Nữ">Giới tính Nữ</option>
                        </select>

                        @*chọn giới tính*@
                        <input type="radio" name="GioiTinh" value="Nam" /> Nam
                        <input type="radio" name="GioiTinh" value="Nữ" /> Nữ
                        <input type="radio" name="GioiTinh" value="Không xác định" /> Không xác định

                        @*nhập giới tính
                            @Html.EditorFor(model => model.GioiTinh, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })*@
                    </div>
                </div>

                @*Hiển thị nhập văn bản (text) bằng hình ảnh
                    <div class="form-group">
                        <label class="control-label col-md-2">Hình ảnh</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UrlHinhAnh, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UrlHinhAnh, "", new { @class = "text-danger" })
                        </div>
                    </div>
                *@

                @*Tạo một input cho việc chọn file để người dùng có thể tải lên một hình ảnh*@
                <div class="form-group">
                    <label class="control-label col-md-2">Hình ảnh</label>
                    <div class="col-md-10">
                        <input type="file" name="FileAnh" />
                        @Html.ValidationMessageFor(model => model.UrlHinhAnh, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    @using (Html.BeginForm("ThemMoi", "KhachHang", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    }
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-success btn-sm">Save</button>
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>