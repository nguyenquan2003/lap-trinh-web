@model WebApplication1.Models.MayTinh

@{
    ViewBag.Title = "ThemMayTinhMoi2";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<main>
    <div class="page-section features" style="margin: 150px 0px">
        <div class="container">
            <h4>Thêm máy tính mới: </h4>
            @using (Html.BeginForm("ThemMayTinhMoi2", "Home", FormMethod.Post))
            {
                //Html.AntiForgeryToken(): được sử dụng để bảo vệ ứng dụng web khỏi tấn công CSRF bằng cách tạo
                //và kiểm tra một mã thông báo duy nhất cho mỗi phiên làm việc của ng dùng.
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @* Html.ValidationSummary: hiển thị tổng hợp các lỗi kiểm tra hợp lệ của biểu mẫu với các thiết lập cụ thể*@
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @*thay tất cả @Html.LabelFor(model => model.,,, htmlAttributes: new { @class = "control-label col-md-2" }) thành <label></label>*@
                        @*@Html.LabelFor(model => model.MaMay, htmlAttributes: new { @class = "control-label col-md-2" })*@

                        <label class="control-label col-md-2">Mã máy</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MaMay, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaMay, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Dòng máy</label>
                        <div class="col-md-10">
                            @*thay tất cả @Html.EditorFor(model => model.,,,, new { htmlAttributes = new { @class = "form-control" } })thành <input/>*@
                            @*@Html.EditorFor(model => model.MaMay, new { htmlAttributes = new { @class = "form-control" } })*@

                            <input class="form-control" type="number" name="MaMay" value="@Model.MaMay" />
                            @Html.ValidationMessageFor(model => model.DongMay, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Giá bán</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                            @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Ngày sản xuất</label>
                        <div class="col-md-10">
                            @*cách 1:*@ @Html.TextBoxFor(model => model.NgaySanXuat, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                            @*cách 2: @Html.EditorFor(model => model.NgaySanXuat, new { htmlAttributes = new { @class = "form-control", type = "date" } })*@
                            @Html.ValidationMessageFor(model => model.NgaySanXuat, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Hãng sản xuất</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.HangSanXuat, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.HangSanXuat, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</main>